{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "Debug ANTLR4 grammar",
      "type": "antlr-debug",
      "request": "launch",
      "input": "testing.mC",
      "grammar": "mC.g4",
      // "actionFile": "grammars/exampleActions.js",
      "startRule": "start",
      "printParseTree": true,
      "visualParseTree": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Start interpreter",
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/index.ts",
      "args": ["./testing.mC", "output.json", "-f", "-i"],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/bin/**/*.js"
      ]
    }
  ]
}